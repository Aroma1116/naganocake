<h2>ジャンル編集</h2>

<%= render 'layouts/error', obj:@genre %>

<%= form_with model: @genre, url:admin_genre_path, local: true do |f| %>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">ジャンル名</label>
    <div class="col-sm-10">
    　<%= f.text_field :genre, autofocus: true, autocomplete: "genre" %> <%= f.submit "変更を保存", class: 'btn btn-success' %>
    </div>
  </div>

<% end %>