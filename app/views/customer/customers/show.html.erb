<h2>マイページ</h2>

<h4>登録情報</h4> <button class="btn btn-success"><%= link_to "編集する", customer_edit_path %></button>

<table>
  <tr>
    <th>氏名</th>
    <td><%= @customer.first_name %> <%= @customer.last_name %></td>
  </tr>
  <tr>
    <th>カナ</th>
    <td><%= @customer.first_kana %> <%= @customer.last_kana %></td>
  </tr>
  <tr>
    <th>郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th>住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th>電話番号</th>
    <td><%= @customer.tel_number %></td>
  </tr>
  <tr>
    <th>メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>