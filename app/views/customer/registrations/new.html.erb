<h2>新規会員登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "customer/shared/error_messages", resource: resource %>
<form>
  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">名前</label>
    <div class="col-sm-10">
      （姓）　<%= f.text_field :first_name, autofocus: true, autocomplete: "first_name"%>
      （名）　<%= f.text_field :last_name, autofocus: true, autocomplete: "last_name" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">フリガナ</label>
    <div class="col-sm-10">
    （セイ）<%= f.text_field :first_kana, autofocus: true, autocomplete: "first_kana" %>
    （メイ）<%= f.text_field :last_kana, autofocus: true, autocomplete: "last_kana" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">メールアドレス</label>
    <div class="col-sm-10">
    　　　　<%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">郵便番号（ハイフンなし）</label>
    <div class="col-sm-10">
    　　　　<%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">住所</label>
    <div class="col-sm-10">
    　　　　<%= f.text_field :address, autofocus: true, autocomplete: "address" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">電話番号（ハイフンなし）</label>
    <div class="col-sm-10">
    　　　　<%= f.text_field :tel_number, autofocus: true, autocomplete: "tel_number" %>
    </div>
  </div>

　<div class="row mb-3">
    <label class="col-sm-2 col-form-label">パスワード
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
    </label>
    <div class="col-sm-10">
  　　　<%= f.password_field :password, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label">パスワード（確認用）</label>
    <div class="col-sm-10">
    　　　<%= f.password_field :password_confirmation, autocomplete: "new-password" %>
    </div>
  </div>

  <div class="row mb-3">
    <label class="col-sm-2 col-form-label"></label>
    <div class="col-sm-10">
    　　<%= f.submit "新規登録", class: "btn btn-sm-10 btn-success" %>
    </div>
  </div>
</form>
<% end %>

<%= render "customer/shared/links" %>
