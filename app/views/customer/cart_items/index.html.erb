

<div class="contaner">
  <div class="row">
    <h2 class="col-sm-9">ショッピングカート</h2>
    <div class="col-sm-3">
      <%= link_to "カートを空にする", customer_destroy_all_path, method: :delete, class: 'btn btn-danger', data: {confirm: "本当に空にしますか？"}%>
    </div>
  </div>
  <div class="row justify-content-center">
    <h4><%= alert %></h4>
    <table class="table table-bordered" style="width: 80%">
    <thead>
      <tr class="table-secondary">
        <th>商品名</th>
        <th>単価(税込)</th>
        <th>数量</th>
        <th>小計</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
    <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= image_tag cart_item.item.get_item_image(100,100) %><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td>
          <%= form_with model: @cartitem, url:customer_cart_item_path(cart_item), method: :patch do |f| %>
            <%= f.select :amount, *[1..10], { selected: cart_item.amount } %>
            <%= f.submit "変更", class: 'btn btn-success' %>
          <% end %>
        </td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to "削除する", customer_cart_item_path(cart_item), method: :delete, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
    </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-sm-2"></div>
    <div class="col-sm-6"><%= link_to "買い物を続ける", root_path, class: 'btn btn-primary' %></div>
    <div class="col-sm-4">
      <table class="table">
        <tbody>
          <tr>
            <td class="table-secondary">合計金額</td>
            <td>¥<%= @total.round.to_s(:delimited)%></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "情報入力に進む", new_customer_order_path, class: "btn btn-success" %>
  </div>
</div>

