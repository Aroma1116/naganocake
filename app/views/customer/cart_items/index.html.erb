<h2>ショッピングカート</h2>
<%= link_to "カートを空にする", customer_destroy_all_path, method: :delete %>
<table>
  <thead>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </thead>
  <tbody>
  <% @cart_items.each do |cart_item| %>
      <tr>
        <td><%= cart_item.item.name %></td>
        <td><%= cart_item.item.with_tax_price %></td>
        <td><%= cart_item.amount %></td>
        <td><%= cart_item.subtotal %></td>
        <td><%= link_to "削除する", customer_cart_item_path(cart_item), method: :delete %></td>
      </tr>
  <% end %>
  </tbody>
</table>
