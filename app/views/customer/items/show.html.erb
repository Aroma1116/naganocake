<%= image_tag @item.get_item_image(100,100) %>
<%= @item.name %>￥<%= (@item.price*1.1).floor %>（税込）

<%= form_with model: @cart_item, url:customer_cart_items_path do |f| %>


<%= f.hidden_field :item_id, :value => @item.id %>
<%= f.select :amount, *[1..10] %> <%= f.submit "カートに入れる", class: "btn btn-success" %>
<% end %>